<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="com.example.yudizapplication.dataBinding.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home"
        tools:context=".dataBinding.DataBindingExample">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="230dp"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            app:imageUrl="@{user.img}"/>
        <EditText
            android:id="@+id/user_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/et_style"
            android:padding="16dp"
            android:textColor="@color/black"
            android:text="@{user.name}"
            android:drawableEnd="@drawable/baseline_edit_24"
            tools:text="Name"/>

        <EditText
            android:id="@+id/user_email_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/et_style"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/user_name_text_view"
            app:layout_constraintTop_toBottomOf="@id/user_name_text_view"
            android:text="@{user.email}"
            android:drawableEnd="@drawable/baseline_edit_24"
            tools:text="Email"/>

        <EditText
            android:id="@+id/user_age_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_style"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintStart_toStartOf="@id/user_name_text_view"
            app:layout_constraintTop_toBottomOf="@id/user_email_text_view"
            android:text="@{Integer.toString(user.age)}"
            android:drawableEnd="@drawable/baseline_edit_24"
            tools:text="Age"/>

        <EditText
            android:id="@+id/user_address_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/et_style"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/user_name_text_view"
            app:layout_constraintTop_toBottomOf="@id/user_age_text_view"
            android:drawableEnd="@drawable/baseline_edit_24"
            android:text="@{user.address}"
            tools:text="Address"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
