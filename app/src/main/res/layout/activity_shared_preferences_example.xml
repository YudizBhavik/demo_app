<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".sharedpreferences.SharedPreferencesExample"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/banner_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/banner_image"
            android:scaleType="centerCrop"
            android:background="@drawable/banner_bg_1"/>
        <TextView
            android:id="@+id/yudiz_fam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerHorizontal="true"
            android:text="@string/hello_nyudiz_fam"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/banner_1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20sp"
            android:id="@+id/txt_f_name"
            android:textStyle="bold"
            android:text="@string/enter_your_first_name"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"/>
        <EditText
            android:importantForAutofill="no"
            app:layout_constraintTop_toBottomOf="@id/txt_f_name"
            app:layout_constraintStart_toStartOf="@+id/txt_f_name"
            android:layout_below="@id/txt_f_name"
            android:layout_marginTop="5dp"
            android:id="@+id/edit_fname"
            android:textColor="@color/black"
            android:background="@drawable/et_style"
            android:layout_width="match_parent"
            android:textColorHint="@color/black"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:hint="@string/enter_first_name" />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/edit_fname"
            app:layout_constraintStart_toStartOf="@+id/txt_f_name"
            android:layout_below="@id/edit_fname"
            android:id="@+id/txt_l"
            android:text="@string/enter_your_last_name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"/>
        <EditText
            android:importantForAutofill="no"
            app:layout_constraintTop_toBottomOf="@id/txt_l"
            app:layout_constraintStart_toStartOf="@+id/edit_fname"
            app:layout_constraintEnd_toEndOf="@id/edit_fname"
            android:layout_marginTop="5dp"
            android:id="@+id/edit_lname"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textColor="@color/black"
            android:background="@drawable/et_style"
            android:layout_width="match_parent"
            android:textColorHint="@color/black"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/enter_last_name" />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/edit_lname"
            app:layout_constraintStart_toStartOf="@+id/txt_f_name"
            android:id="@+id/txt_email"
            android:text="Email"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"/>
        <EditText
            android:autofillHints="phone"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/txt_email"
            app:layout_constraintStart_toStartOf="@+id/edit_lname"
            app:layout_constraintEnd_toEndOf="@id/edit_lname"
            android:layout_marginTop="5dp"
            android:id="@+id/edit_email"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textColor="@color/black"
            android:background="@drawable/et_style"
            android:layout_width="match_parent"
            android:textColorHint="@color/black"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/enter_email"
            tools:ignore="TextFields" />

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/edit_email"
            app:layout_constraintStart_toStartOf="@+id/txt_f_name"
            android:id="@+id/txt_dob"
            android:text="@string/dob"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"/>
        <EditText
            android:autofillHints="phone"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/txt_dob"
            app:layout_constraintStart_toStartOf="@+id/edit_lname"
            app:layout_constraintEnd_toEndOf="@id/edit_lname"
            android:layout_marginTop="5dp"
            android:id="@+id/edit_dob"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textColor="@color/black"
            android:background="@drawable/et_style"
            android:layout_width="match_parent"
            android:textColorHint="@color/black"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/enter_date_of_birth" />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/edit_dob"
            app:layout_constraintStart_toStartOf="@+id/txt_f_name"
            android:id="@+id/txt_phone"
            android:text="@string/phone_number"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"/>
        <EditText
            android:autofillHints="phone"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/txt_phone"
            app:layout_constraintStart_toStartOf="@+id/edit_dob"
            app:layout_constraintEnd_toEndOf="@id/edit_dob"
            android:layout_marginTop="5dp"
            android:id="@+id/edit_phone"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textColor="@color/black"
            android:background="@drawable/et_style"
            android:layout_width="match_parent"
            android:textColorHint="@color/black"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/enter_your_phone_number" />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/edit_phone"
            app:layout_constraintStart_toStartOf="@+id/txt_f_name"
            android:id="@+id/txt_address"
            android:text="@string/txt_address"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"/>
        <EditText
            android:autofillHints="phone"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/txt_address"
            app:layout_constraintStart_toStartOf="@+id/edit_dob"
            app:layout_constraintEnd_toEndOf="@id/edit_dob"
            android:layout_marginTop="5dp"
            android:id="@+id/edit_address"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textColor="@color/black"
            android:background="@drawable/et_style"
            android:layout_width="match_parent"
            android:textColorHint="@color/black"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/enter_your_address" />

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/edit_phone"
            app:layout_constraintStart_toStartOf="@+id/txt_f_name"
            android:id="@+id/txt_show_address"
            android:text="@string/txt_address"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"/>

        <Button
            app:layout_constraintTop_toBottomOf="@+id/edit_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_submit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/btn_submit"
            android:textColor="@color/white"
            android:background="@drawable/bt_style"
            android:layout_centerHorizontal="true" />
        <Button
            app:layout_constraintTop_toBottomOf="@+id/btn_submit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_view"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/btn_view"
            android:textColor="@color/white"
            android:background="@drawable/bt_style"
            android:layout_centerHorizontal="true" />
        <Button
            app:layout_constraintTop_toBottomOf="@+id/btn_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_clear"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/btn_clear"
            android:textColor="@color/white"
            android:background="@drawable/bt_style"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/textView_Firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="FirstName: "
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/txt_f_name"
            app:layout_constraintTop_toBottomOf="@+id/btn_clear"/>
        <TextView
            android:id="@+id/textShowFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="FirstName"
            android:textColor="@color/black"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="@+id/textView_Firstname"
            app:layout_constraintStart_toStartOf="@+id/btn_clear"
            app:layout_constraintTop_toBottomOf="@+id/btn_clear"/>
        <TextView
            android:id="@+id/textView_Lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="LastName: "
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/txt_f_name"
            app:layout_constraintTop_toBottomOf="@+id/textView_Firstname"/>
        <TextView
            android:id="@+id/textShowLName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Lastname"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/textView_Lastname"
            app:layout_constraintStart_toStartOf="@+id/textShowFName"
            app:layout_constraintTop_toBottomOf="@+id/textShowFName"/>
        <TextView
            android:id="@+id/textView_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Email: "
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/txt_f_name"
            app:layout_constraintTop_toBottomOf="@+id/textView_Lastname"/>
        <TextView
            android:id="@+id/textShowEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Email"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/textView_Email"
            app:layout_constraintStart_toStartOf="@+id/textShowFName"
            app:layout_constraintTop_toBottomOf="@+id/textShowFName"/>
        <TextView
            android:id="@+id/textView_DOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="DOB: "
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/txt_f_name"
            app:layout_constraintTop_toBottomOf="@+id/textView_Email"/>
        <TextView
            android:id="@+id/textShowDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="DOB"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/textView_DOB"
            app:layout_constraintStart_toStartOf="@+id/textShowFName"
            app:layout_constraintTop_toBottomOf="@+id/textShowFName"/>
        <TextView
            android:id="@+id/textView_Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Phone: "
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/txt_f_name"
            app:layout_constraintTop_toBottomOf="@+id/textView_DOB"/>
        <TextView
            android:id="@+id/textShowPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Phone"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/textView_Phone"
            app:layout_constraintStart_toStartOf="@+id/textShowFName"
            app:layout_constraintTop_toBottomOf="@+id/textShowFName"/>
        <TextView
            android:id="@+id/textView_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Address: "
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/txt_f_name"
            app:layout_constraintTop_toBottomOf="@+id/textView_Phone"/>
        <TextView
            android:id="@+id/textShowAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Addess"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/textView_Address"
            app:layout_constraintStart_toStartOf="@+id/textShowFName"
            app:layout_constraintTop_toBottomOf="@+id/textShowFName"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
