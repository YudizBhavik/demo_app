<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bg_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Multithreading.OnBoardingScreen2">

    <ImageView
        android:id="@+id/yudiz_logo"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img"/>
    <Button
        android:id="@+id/example_1"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Example 1"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/yudiz_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_style"/>
    <Button
        android:id="@+id/example_2"
        android:hapticFeedbackEnabled="true"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/example_1"
        app:layout_constraintTop_toBottomOf="@+id/example_1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Example 2"
        android:textColor="@color/white"
        android:background="@drawable/bt_style"/>
    <Button
        android:id="@+id/example_3"
        android:hapticFeedbackEnabled="true"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/example_2"
        app:layout_constraintTop_toBottomOf="@+id/example_2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Example 3"
        android:textColor="@color/white"
        android:background="@drawable/bt_style"/>
    <Button
        android:id="@+id/example_4"
        android:hapticFeedbackEnabled="true"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/example_3"
        app:layout_constraintTop_toBottomOf="@+id/example_3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Example 4"
        android:textColor="@color/white"
        android:background="@drawable/bt_style"/>

</androidx.constraintlayout.widget.ConstraintLayout>
